<?xml version="1.0" encoding="UTF-8"?>

<SiconosModel>
	<Title>toto</Title>
	<Author> personne</Author>
	<Description> ... </Description>
	<Date> today </Date>
	<SchemaXML>/config/xmlschema/SiconosModelSchema-V1.2.xsd</SchemaXML>

	<Time>
		<t0>0</t0>
		<T>10</T>
	</Time>

	<NSDS>
		<DS_LMGC90>
<!--	    dans cette balise, on ne met rien au lancement car c'est LMGC90 qui connais le nombre total de DS 				-->
<!--			et c'est lui qui donnera les infos a la plateforme pour remplir ce vide ...									-->
			
<!--			de meme pour les interactions, LMGC90 indiquera plus tard le nombre et le type ...							-->
			
<!--			pour les EC et DSIO, il faut voir comment on se debrouillera, mais en tout cas pour le XML pas de probleme	-->
<!--			du fait qu'on est dans cette balise "joker"																	-->
		</DS_LMGC90>
	</NSDS>
	
	<Strategy type='TimeStepping'>
		<TimeDiscretisation isConstant='true'>	
			<h>0.1</h>
			<N>100</N>
			<hMin>0.001</hMin>
			<hMax>10</hMax>
		</TimeDiscretisation>				

		<OneStepIntegrator_LMGC90>
		<!--
			meme chose que pour les DS, on n'en connait pas le nombre total, donc ce sera complete apres la lecture du fichier XML
			et apres que le plugin LMGC90 ai lu ses donnees ...
		-->
		</OneStepIntegrator_LMGC90>

		<OneStepNSProblem>
		 	<LCP>
				<n>8</n>
				<M matrixRowSize='1' matrixColSize='1'>	<row>1.0 </row>	</M>
				<q vectorSize='1'> 1.0 </q>			
				<Interaction_Concerned all='true'/>
		 	</LCP>
		 	<Solver>
				<LcpSolving>
					<Latin maxIter="1" tolerance="0.01" normType="max" searchDirection="1.0"/>
				</LcpSolving>
			</Solver>
		 </OneStepNSProblem>
	</Strategy>

</SiconosModel>
