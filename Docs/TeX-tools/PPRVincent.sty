% Definition of the bullet for itemize env.
\def\@prosperItemi{{\scriptsize\blue%
      \raisebox{0pt}{\ding{104}}}}
\def\@prosperItemii{{\scriptsize\blue%
      \raisebox{0pt}{\ensuremath{\bullet}}}}
\def\@prosperItemiii{{\scriptsize%
      \raisebox{0pt}{\ensuremath{-}}}}
\renewcommand{\myitem}[2]{%
  \ifnum#1=1
    \gdef\@prosperItemi{#2}
  \else
    \ifnum#1=2
       \gdef\@prosperItemii{#2}
    \else
       \ifnum#1=3
          \gdef\@prosperItemiii{#2}
       \else
          \ClassError{prosper}{Undefined item level}{Available levels: 1,2,3}
       \fi
    \fi
  \fi
}
                                                                                  
\def\@DefMyItem{%
  \global\let\labelitemi=\@prosperItemi
  \global\let\labelitemii=\@prosperItemii
  \global\let\labelitemiii=\@prosperItemiii
}
                                                                                  
